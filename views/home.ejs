<%- layout('/layouts/boilerplate.ejs') %>
  <link rel="stylesheet" href="/stylesheets/home.css">

  <div class="background">
    <% for( let i=0; i < 140; i++ ) { %>
      <div class="dot" style="--r:<%= Math.floor(Math.random()*100) %>"></div>
      <% } %>
  </div>
  <main class="d-flex flex-direction-column justify-content-center align-items-center" style="height: 100vh; width: 100%;">
    
    <form action="/play">
      <button class="glow-on-hover">Lets Go</button>
      <div class="langSelect text-center mt-3">
        <label for="language">Language</label>
        <select name="language" id="language">
          <option value="spanish">Spanish</option>
          <option value="english">English</option>
        </select>
      </div>
    </form>
  </main>