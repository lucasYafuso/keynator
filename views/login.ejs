<%- layout('/layouts/boilerplate.ejs') %>
<h1>Login</h1>

<form class="user-form" action="/login" method="POST">
    <label class="form-label mt-3" for="username">Username</label>
    <input class="form-control mb-3" type="text" name="username" id="username">
    <label class="form-label" for="password">Password</label>
    <input class="form-control mb-3" type="password" name="password" id="password">
    <button class="glow-on-hover">Submit</button>
</form>