<%- layout('/layouts/boilerplate.ejs') %>
<h1>Register</h1>
<form class="user-form mt-3" action="/register" method="POST">
    <label class="form-label" for="username">Username</label>
    <input class="form-control mb-3" type="text" name="username" id="username" maxlength="13">
    <label class="form-label" for="password">Password</label>
    <input class="form-control mb-3" type="password" name="password" id="password">
    <button class="glow-on-hover">Submit</button>
</form>

